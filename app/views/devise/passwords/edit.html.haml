.container{:style => "padding-top:8%"}
  .row.center
    .col.l6.m8.s10.offset-l3.offset-m2.offset-s1
      .card-panel.z-depth-5.features-black
        = link_to  root_path, :class => "Motion white-text" do
          %h1{:style => "margin-top:-100px;font-size: 4.0rem;"} TeamMaker
        %p.flow-text.thin.white-text Cambio de contraseña
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .input-field
            = f.label :password, "Nueva contraseña"
            %br/
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} caracteres mínimos)
              %br/
            = f.password_field :password, autofocus: true, autocomplete: "off", :style => "color:white"
          .input-field
            = f.label :password_confirmation, "Confirmar nueva contraseña"
            %br/
            = f.password_field :password_confirmation, autocomplete: "off" , :style => "color:white"
          .actions
            = f.submit "cambiar", :class=> "btn btn-default" , :style => "background-color:#3d5afe"
      = render "devise/shared/links"
