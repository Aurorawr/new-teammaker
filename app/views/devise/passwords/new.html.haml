.container{:style => "padding-top:8%"}
  .row.center
    .col.l6.m8.s10.offset-l3.offset-m2.offset-s1
      .card-panel.z-depth-5.features-black
        = link_to "<h1 style='margin-top:-100px;font-size: 4.0rem;'>TeamMaker</h1>".html_safe, root_path, :class => "Motion white-text"
        %p.flow-text.thin.white-text ¿Olvidaste tu contraseña?
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .input-field
            = f.label :email, "Correo"
            %br/
            = f.email_field :email, autofocus: true ,autocomplete: "off", :class => "validate" , :style => "color:white"
          %br/
          .actions
            = f.submit "Enviar", :class=> "btn btn-default waves-effect waves-light" , :style => "background-color:#3d5afe"
      = render "devise/shared/links"
