.container
  .row.center
    .col.l6.m8.s10.offset-l3.offset-m2.offset-s1{:style => "padding-top:100px"}
      .card-panel.z-depth-5.features-black
        = link_to "<h1 style='margin-top:-100px;font-size: 4.0rem;'>TeamMaker</h1>".html_safe, root_path, :class => "Motion white-text"
        %p.flow-text.thin.white-text Ingresa tus datos para acceder
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .input-field
            = f.label :email, 'Correo', for: "email" , 'data-error' => "correo electr칩nico no v치lido"
            = f.email_field :email, autofocus: true ,autocomplete: "on", class: 'validate', required: "", 'aria-label'=> "true"  , :style => "color:white"
          .input-field
            = f.label :password, 'Contrase침a' , 'data-error' => "Ingrese su contrase침a"
            %br/
            = f.password_field :password, autocomplete: "off" , class: 'validate', required: "", 'aria-label'=> "true" , :style => "color:white"
          %br/
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me, "Recordarme"
          .actions
            = f.submit "Entrar".html_safe, :class=> "btn btn-default waves-effect waves-light z-depth-4", :style => "background-color:#3d5afe"
      = render "devise/shared/links"
