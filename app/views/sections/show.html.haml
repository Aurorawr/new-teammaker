.container{:style => "padding-top:2%"}
  .row
    .col.s12
      %h4{:align => "center"}
        %b Secci&#xF3;n:
        %span.sub-titulo= @seccion.code
      - if @seccion.id != nil
        .row
          .col.s12.l6.center
            %strong Profesor(es):
            %p
              - if @seccion.users.where(rol: 1).count == 0
                Ning&#xFA;n profesor asignado a&#xFA;n
              - else
                - @seccion.users.where(rol: 1).each do |t|
                  %span.chip
                    = t.email
          .col.s12.l6.center
            %strong Ayudante(s):
            %p
              - if @seccion.users.where(rol: 2).count == 0
                Ning&#xFA;n ayudante asignado a&#xFA;n
              - else
                - @seccion.users.where(rol: 2).each do |t|
                  %span.chip
                    = t.email
      %h3{:style => "display: inline"}
        %b Buscador de:
      %h4.sub-titulo{:style => "display: inline; color:#999999"} Estudiantes
      - if current_user.rol == 1
        %a.right.btn-floating.btn-large.waves-effect.waves-light.btn.green.accent-4.tooltipped.modal-trigger{"data-delay" => "50", "data-position" => "top", "data-tooltip" => "Nuevo usuario", :href => "#nuevoUsuario"}
          %i.material-icons{:style => "font-size:2.4rem"} person_add
      .fixed-action-btn.horizontal
        %a.btn-floating.btn-large.black.tooltipped{"data-delay" => "50", "data-position" => "top", "data-tooltip" => "Paginación"}
          %i.large.material-icons description
        %ul
          %li
            = link_to '<p style="line-height:0%;font-size: 20px;text-align: center;">5</p>'.html_safe,                                                              |
              section_path(@seccion.id,:per_page => 5),:onchange => "if(this.value){window.location='?per_page='+this.value;}",class: "btn-floating blue lighten-2" |
          %li
            = link_to '<p style="line-height:0%;font-size: 20px;text-align: center;">10</p>'.html_safe,                                                    |
              section_path(@seccion.id,:per_page => 10),:onchange => "if(this.value){window.location='?per_page='+this.value;}",class: "btn-floating blue" |
          %li
            = link_to '<p style="line-height:0%;font-size: 20px;text-align: center;">30</p>'.html_safe, section_path(@seccion.id,:per_page => 30),:onchange => "if(this.value){window.location='?per_page='+this.value;}",class: "btn-floating blue darken-4"
      %hr
        %br
          %br
            .row
              .col.l4.s12
                = form_tag section_path(@seccion.id), :method => 'get' do
                  .row
                    .field.right.col.l6.s12
                      = label :search_status, "Estado"
                      = select_tag :search_status, options_for_select([['Activo','t'],['Baneado','f']], params[:search_status]), class: "form-control", :prompt => 'Ninguno'
                .col.l6.m12.s12
                  = label :search, Contenido de la búsqueda
                  .row
                    .col.l10.m10.s10
                      %nav{:style => "background-color: #0089ec;height: 45px !important;padding: 0 0;"}
                        .input-field
                          = text_field_tag :search, params[:search], type: search, style:padding-left:1rem; width:100%
                    .col.l2.m2.s2{:style => "padding: 0 0;"}
                      = button_tag(type: submit, class: btn waves-effect waves-light, style: height: 45px !important;width: calc(100% - 10px);padding: 0 0;) do
                        %i.material-icons{:style => "line-height: 48px;padding-right: -28px;font-size: 2rem;"} search
            %hr
              %table.striped.centered.responsive-table
                %thead
                  %tr
                    %th Correo
                    %th Estado
                    %th
                      - if current_user.rol == 1
                        Acciones
                      - else
                        Ver
                %tbody
                  - @users.each do |user|
                    / Modal Ver usuario
                    #verUsuario
                    = user.id
                    " class="modal"&gt;
                    \#{render :partial = users/shared/show_user, locals: {user: user}}
                  / Modal Editar usuario
                  #editarUsuario
                  = user.id
                  " class="modal modal-fixed-footer"&gt;
                  \#{render :partial = users/shared/edit_user, locals: {user: user}}
                %tr
                - if user.status == false
                  style="color:#F44336;"
                \&gt;
                %td= user.email
                %td
                  - if user.status == true
                    Activo
                  - elsif user.status == false
                    Baneado
                  - else
                    No definido
                %td
                  %a.btn.btn-floating.waves-effect.waves-light.modal-trigger{:href => "#verUsuario"}
                  = user.id
                  " style="background-color:#2196f3; border-color:#0d8aee"&gt;
                  %i.material-icons perm_identity
                - if current_user.rol == 1
                  %a.btn.btn-floating.waves-effect.waves-light.modal-trigger{:href => "#editarUsuario"}
                  = user.id
                  " style="background-color:#ff9800; border-color:#e68900"&gt;
                  %i.material-icons mode_edit
                = link_to 'i class=material-iconsdelete_forever/i'.html_safe, user, method: :delete, data: { confirm: ¿Estás seguro que deseas eliminar a este usuario? },class: btn-floating waves-effect waves-light red
    - if !@users.present?
      %h1.text-center No se ha encontrado ninguna coincidencia :(
    .center-align= will_paginate @users,renderer: MaterializePagination::Rails
    / Modal nuevo usuario
    #nuevoUsuario.modal.modal-fixed-footer
      = render :partial = users/shared/new_user, locals: {sections: @sections, careers: @careers}
